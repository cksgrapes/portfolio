//---------------------------------------------
//- meta
//---------------------------------------------
mixin meta
	meta(charset='UTF-8')
	title #{page.meta.title}
	meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
	meta(name='viewport', content='width=device-width,initial-scale=1.0')
	meta(name='description', content=page.meta.description)
	meta(name='keywords', content=page.meta.keyword)
	meta(property='format-detection', content='telephone=no')

//---------------------------------------------
//- link
//---------------------------------------------
mixin link
	if favicon
		link(rel='icon', href='/favicon.ico')
	if clipicon
		link(rel='apple-touch-icon-precomposed', href='/clip_icon.png')
	| 
	|<!--[if lt IE 9]>
	|<script src="/js/html5shiv-printshiv.min.js"></script>
	|<![endif]-->
	if js_load
		if jquery_load_head
			include _jquery.jade
	if fontawesome_use
		//- link(rel='stylesheet', href='/css/font-awesome.css')
		link(rel='stylesheet', href='/css/style.css')
	//- link(rel='stylesheet', href='css/style.css')

//---------------------------------------------
//- linklist
//---------------------------------------------
mixin linklist_loop
	each link, i in links
		li: a(href="#{link.url}") #{link.title}

mixin linklist(ulclass)
	if !ulclass
		ul
			+linklist_loop
	else
		ul(class=ulclass)
			+linklist_loop
